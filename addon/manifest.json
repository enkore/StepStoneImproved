{

  "manifest_version": 2,
  "name": "StepStoneImproved",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "stepstoneimproved@oelerich.org"
    }
  },

  "description": "Some tools to help working with stepstone job search.",

  "icons": {
    "48": "icons/icon.svg"
  },

  "content_scripts": [
    {
      "matches": ["*://www.stepstone.de/*"],
      "js": ["scripts/jquery.js", "scripts/inject.js"]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "identity",
    "*://www.stepstone.de/*"
  ],
  // "browser_action": {
  //   "default_icon": {
  //     "19": "icons/icon.svg",
  //     "38": "icons/icon.svg"
  //   },
  //   "default_title": "UMR CMS Tools",
  //   "default_popup": "popup/choose_action.html",
  //   "browser_style": true
  // },
  "background": {
    "scripts": [
      "background/index.js"
    ]
  }

}